<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ARestauranteDetalle">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="366dp"
        android:layout_height="598dp"
        android:src="@drawable/resta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.428" />

    <TextView
        android:id="@+id/tv_restaurants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurantes"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/tv_nameR"
        android:layout_width="343dp"
        android:layout_height="36dp"
        android:text="nombreRestaurante"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.661"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23" />

    <TextView
        android:id="@+id/tv_locationR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:text="ubicacionRestaurante"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/tv_nameR"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_nameR"
        app:layout_constraintTop_toBottomOf="@+id/tv_nameR" />

    <TextView
        android:id="@+id/tv_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="horario"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/tv_locationR"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_locationR"
        app:layout_constraintTop_toBottomOf="@+id/tv_locationR" />

    <TextView
        android:id="@+id/tv_typeR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="tipoRestaurante"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/tv_hours"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_hours"
        app:layout_constraintTop_toBottomOf="@+id/tv_hours" />

    <TextView
        android:id="@+id/tv_phoneR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="telegonoRestaurante"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/tv_typeR"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_typeR"
        app:layout_constraintTop_toBottomOf="@+id/tv_typeR" />

    <TextView
        android:id="@+id/tv_descriptionR"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:text="Descripcion"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/tv_phoneR"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_phoneR"
        app:layout_constraintTop_toBottomOf="@+id/tv_phoneR" />

    <Button
        android:id="@+id/btn_anadirFavorito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marcar como favorito"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.839"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099" />

    <Button
        android:id="@+id/btn_quitarFavorito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quitar como favorito"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.839"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_restauranteDetalle"
        android:layout_width="102dp"
        android:layout_height="91dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.318"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btn_volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099" />



</androidx.constraintlayout.widget.ConstraintLayout>