<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_tendencia"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:text="Tendencia en"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.368" />

    <TextView
        android:id="@+id/tv_ntweets"
        android:layout_width="56dp"
        android:layout_height="20dp"
        android:text="0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_keyword"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_ntweets2"
        android:layout_width="76dp"
        android:layout_height="20dp"
        android:text="Tweets"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_ntweets"
        app:layout_constraintTop_toBottomOf="@+id/tv_keyword"
        app:layout_constraintVertical_bias="0.368" />

    <TextView
        android:id="@+id/tv_keyword"
        android:layout_width="256dp"
        android:layout_height="27dp"
        android:textStyle="bold"
        android:text="keyword"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_tendencia"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_tendencia"
        app:layout_constraintTop_toBottomOf="@+id/tv_tendencia" />

    <TextView
        android:id="@+id/tv_tema"
        android:layout_width="198dp"
        android:layout_height="22dp"
        android:text="tema"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_tendencia"
        app:layout_constraintStart_toEndOf="@+id/tv_tendencia"
        app:layout_constraintTop_toTopOf="@+id/tv_tendencia"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_tema"
        app:layout_constraintStart_toEndOf="@+id/tv_tema"
        app:layout_constraintTop_toTopOf="@+id/tv_tema"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/options" />


</androidx.constraintlayout.widget.ConstraintLayout>